<div class="w3-padding-32">
  <div class="w3-center w3-grey w3-padding-16">
    <H1>
      User Dashboard
    </H1>
  </div>
</div>

<div class="w3-padding-32">
  <div class="w3-bar w3-border">
    <a href="/" class="w3-bar-item w3-button">Home</a>
    <a href="/my-account" class="w3-bar-item w3-button w3-light-grey">My Account</a>
    <a href="/api/users/logout" class="w3-bar-item w3-button">Log Out</a>
  </div>
</div>
<!-- Driver Card -->
<div class="w3-card-4 w3-margin w3-white">

  <div class="w3-container" id="driver-form">
    <h3>Create a New Driver Post:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">PickUp Location:{{this.pickup_location}}</label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-name">Dropoff Location:{{this.dropoff_location}}</label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-name">Driver Availability{{this.availability}}</label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="add-btn">Create</button>
      </div>
    </form>
  </div>




  <header class="w3-display-container w3-wide bgimg w3-grayscale-min" id="home">
    <img src="/css/image2.png" alt="Logo" style="width:50%">

  </header>
</div>

<div class="w3-card-4 w3-margin w3-white">

  <div class="w3-container" id="driver-form">
    <h3>Drivers you have added to your Account:</h3>
    {{#each drivers as |driver|}}
    {{!-- Drivers added to my account --}}

    <p class="w3-center" id="addDriver"></p>
    <div class="w3-row w3-margin-bottom" id="demo1">
      <hr>
      <h4><strong>{{driver.name}}</strong></h4>
      <p> {{driver.availability}}s</p>
      <p>Pick Up @ <strong>{{driver.pickup_location}}</strong></p>
      <p>Drop Off @ <strong>{{driver.dropoff_location}}</strong></p>
      {{!-- nEED TO ADD js funct to id="removeDriver" --}}
      </br><button id="removeDriver" data-post-id={{driver.id}} type="reset">Remove Driver {{driver.user_id}}</button>
      {{/each}}
    </div>
  </div>
</div>
</div>

<div class="w3-card-4 w3-margin w3-white">

  <div class="w3-container" id="driver-form">
    <h3>Comments Posted:</h3>
    {{!-- #each comments as |comment| --}}
    {{#each drivers as |driver|}}
    {{!-- Drivers added to my account --}}

    <p class="w3-center" id="confirmComment"></p>
    <div class="w3-row w3-margin-bottom" id="demo1">
      <hr>
      <h4><strong>{{comment.driver_id}}'s Post:</strong></h4>
      <p> {{comment.comment_text}}</p>

      {{!-- NEED TO ADD js funct to id="removeComment" --}}
      </br><button id="removeComment" type="reset">Delete Comment</button>
      {{/each}}
    </div>
  </div>
</div>

<script type="text/javascript" src="/js/removeDriver.js"></script>