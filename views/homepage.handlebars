{{!-- Search/Filter --}}
<div id="searchWrapper">
  <input
    type="text"
    name="searchBar"
    id="searchBar"
    placeholder="Enter a name, city, pickup, or dropoff location to filter search"
  />
</div>

<!-- Loop over each object in the riders array -->
{{#each riders as |rider| }}
<div class="row mb-4 rider">
  <div class="col-md-5">
    <h2>
      <a href="/rider/{{rider.id}}">{{rider.name}}</a>
    </h2>
        <p>Created by {{rider.user.name}} on {{format_date rider.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{rider.informaiton}}
    </p>
  </div>
</div>
{{/each}}
